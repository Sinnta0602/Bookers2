<header class="navbar navbar-fixed-top navbar-inerse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <!-- MEMO: deviseのヘルパーメソッド。「今ログイン状態かどうか？」を判定。 -->
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home home" %></li>
          <li><%= link_to 'Users', users_path, class: "glyphicon glyphicon-user user" %></li>
          <li><%= link_to 'Books', books_path, class: "glyphicon glyphicon-book books" %></li>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %></li>
        </ul>
      <% else %> <!-- ログインしてない時 -->
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Home', root_path, class: "glyphicon glyphicon-home home" %></li>
          <li><%= link_to 'About', about_path, class: "glyphicon glyphicon-user user" %></li>
          <li><%= link_to 'SignUp', new_user_registration_path, class: "glyphicon glyphicon-home home" %></li>
          <li><%= link_to 'SignIn', new_user_session_path, class: "glyphicon glyphicon-home home" %></li>
        </ul>
      <% end %>
    </nav>
  </div>
</header>