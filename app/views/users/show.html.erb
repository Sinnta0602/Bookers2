<div class="body">
  <div class=container>
    <%= flash[:sign_in] %>
    <%= flash[:update] %>
    <div class="row">
      <%= render 'layouts/profile', user: @book_user, book: @book %>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
            <!-- MEMO: @booksには、その人が投稿した本全部が入ってるので、eachを使って、一つ一つの本に分解。 -->
            <!-- 一つ一つの本は|book| にしてる。ローカル変数という。自分で決めるもの。 -->
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= link_to book_path do %>
                    <%= book.title %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>