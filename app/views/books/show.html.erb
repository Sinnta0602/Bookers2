<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'layouts/profile', user: @find_book.user, book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to( @find_book.user) do %>
              <%= attachment_image_tag(@find_book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %><br>
              <%= @find_book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @find_book.title, @find_book %></td>
          <td><%= @find_book.body %></td>

          <% if @find_book.user == @user %>
            <td><%= link_to 'Edit', edit_book_path(@find_book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @find_book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>